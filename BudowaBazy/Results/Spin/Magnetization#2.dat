cd 'C:\Users\77swi\OneDrive\STUDY_MORE\Master - IKW\Numeryka Kwantowa\BudowaBazy\BudowaBazy\Results\Spin'

unset key
set autoscale xy

L = 16
delta = 8


set title sprintf('Evolution of on-site magnetization over time for {/Symbol D} = %0.0f', delta)

set xlabel 'i^{th} site'
set ylabel '<S@^i_z(t)>'
set cblabel 'time'

set xzeroaxis ls 2 lt 0

set xrange [1:L]

set palette defined (0 "blue", 0.25*L "royalblue", 0.5*L "cyan", 0.75*L "sea-green", L "green", 1.25*L "dark-yellow", 1.5*L "yellow", 1.75*L "orange", 2*L "red")

stats sprintf('Neel state evolution_Delta=%0.0f.txt',delta) u 1:3 nooutput # calculates the number of blocks (separated by header)
n = STATS_blocks # number of blocks - plots for different times

plot for[in=0:n-1] sprintf('Neel state evolution_Delta=%0.0f.txt',delta) i in u 1:3:2 w l linecolor palette


